    %script{src: "bower_components/jquery/jquery.js"}
    %script{src: "bower_components/socket.io-client/dist/socket.io.js"}
    %script{src: "bower_components/jquery-cookie/jquery.cookie.js"}
    %script{src: "bower_components/raphael/raphael.js"}
    -# %script{src: "bower_components/raphael.pan-zoom/index.js"}
    %script{src: "scripts/raphael.pan-zoom.js"}
